{
	"easycom": {
		"autoscan": true,
		"custom": {
			// uni-ui 规则如下配置
			"^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
		}
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"path": "pages/company/company",
			"style": {
				"navigationBarTitleText": "良信",
				"app-plus": {
					"titleNView": {
						"buttons": [{
							"text": "\ue534",
							"fontSrc": "/static/uni.ttf",
							"fontSize": "22px",
							"color": "#FFFFFF"
						}]
					}
				}
			}
		},
		{
			"path": "pages/company/about",
			"style": {
				"navigationBarTitleText": "关于"
			}
		},
		{
			"path": "pages/about-me/about-me",
			"style": {
				"navigationBarTitleText": "宋楠"
			}
		}, {
			"path": "pages/web-review/web-view"
		}
	],
	"globalStyle": {
		"pageOrientation": "portrait",
		"navigationBarTitleText": "Hello Nader",
		"navigationBarTextStyle": "white",
		"navigationBarBackgroundColor": "#1296db",
		"backgroundColor": "#F8F8F8",
		"backgroundColorTop": "#F4F5F6",
		"backgroundColorBottom": "#F4F5F6",
		"mp-360": {
			"navigationStyle": "custom"
		},
		"h5": {
			"maxWidth": 1190,
			"navigationBarTextStyle": "black",
			"navigationBarBackgroundColor": "#F1F1F1"
		}
	},
	"tabBar": {
		"color": "#7A7E83",
		"selectedColor": "#1296db",
		"borderStyle": "black",
		"backgroundColor": "#F8F8F8",
		"list": [{
				"pagePath": "pages/company/company",
				"iconPath": "static/company.png",
				"selectedIconPath": "static/companyHL.png",
				"text": "良信"
			},
			{
				"pagePath": "pages/about-me/about-me",
				"iconPath": "static/aboutMe.png",
				"selectedIconPath": "static/aboutMeHL.png",
				"text": "关于我"
			}
		]
	}
}
